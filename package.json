{
  "name": "personal-metrics",
  "version": "1.0.0",
  "description": "Service to capture, store, and display personal metrics.",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:single -- --watch",
    "build:single": "tsc",
    "docs": "typedoc --out dist/docs --theme minimal --logger none --hideGenerator",
    "format": "prettier --write '{**/*.md,**/*.json,**/*.yml,src/**/*.ts}'",
    "format:check": "prettier --check '{**/*.md,**/*.json,**/*.yml,src/**/*.ts}'",
    "lint": "eslint --ext .ts .",
    "prestart": "npm run build:single && npm run docs",
    "start": "concurrently 'npm:build' 'nodemon'",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamVig/personal-metrics.git"
  },
  "keywords": [
    "quantified",
    "self"
  ],
  "author": "Adam <adam@adamvig.com> (https://adamvig.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AdamVig/personal-metrics/issues"
  },
  "homepage": "https://github.com/AdamVig/personal-metrics#readme",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/pino": "^5.8.8",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "5.0.0",
    "nodemon": "^1.19.1",
    "pino-pretty": "^3.1.0",
    "pkg": "^4.4.0",
    "prettier": "1.18.2",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/platform-express": "^6.3.1",
    "dotenv": "^8.0.0",
    "pino": "^5.12.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2"
  }
}
