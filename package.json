{
  "name": "personal-metrics",
  "version": "1.0.0",
  "description": "Service to capture, store, and display personal metrics.",
  "main": "dist/main.js",
  "bin": "dist/main.js",
  "scripts": {
    "build": "npm run build:single -- --watch",
    "build:single": "tsc",
    "docs": "typedoc --out dist/docs --theme minimal --mode file --hideGenerator --exclude 'src/migrations/*'",
    "format": "prettier --write '{**/*.md,**/*.json,**/*.yml,src/**/*.ts}'",
    "format:check": "prettier --check '{**/*.md,**/*.json,**/*.yml,src/**/*.ts}'",
    "lint": "eslint --ext .ts .",
    "prestart": "concurrently 'npm:build:single' 'npm:docs'",
    "start": "concurrently 'npm:build' 'nodemon'",
    "test": "",
    "typeorm": "ts-node ./node_modules/.bin/typeorm"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamVig/personal-metrics.git"
  },
  "keywords": [
    "quantified",
    "self"
  ],
  "author": "Adam <adam@adamvig.com> (https://adamvig.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AdamVig/personal-metrics/issues"
  },
  "homepage": "https://github.com/AdamVig/personal-metrics#readme",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/pino": "^5.8.13",
    "@types/verror": "^1.10.3",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "concurrently": "^5.0.0",
    "eslint": "^6.7.0",
    "eslint-config-prettier": "^6.7.0",
    "nodemon": "^2.0.1",
    "pino-pretty": "^3.4.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.2",
    "typedoc": "^0.15.3",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@nest-middlewares/helmet": "^6.0.0",
    "@nestjs/common": "^6.10.1",
    "@nestjs/core": "^6.10.1",
    "@nestjs/platform-express": "^6.10.1",
    "@nestjs/typeorm": "^6.2.0",
    "axios": "^0.19.0",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "pg": "^7.14.0",
    "pino": "^5.14.0",
    "queue": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "source-map-support": "^0.5.16",
    "typeorm": "^0.2.20",
    "verror": "^1.10.0"
  },
  "pkg": {
    "scripts": [
      "dist/migrations/**/*.js"
    ]
  }
}
